<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>
    <style name="heading" parent="@android:style/TextAppearance.Large">
        <item name="android:gravity">left</item>
    </style>
    <style name="result" parent="@android:style/TextAppearance.Large">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">42sp</item>
    </style>
    <style name="result_log1" parent="@android:style/TextAppearance.Medium">
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="result_log" parent="@android:style/TextAppearance.Small">
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="config" parent="@android:style/TextAppearance.Large">
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="range" parent="@android:style/TextAppearance.Medium">
        <item name="android:gravity">right</item>
    </style>
    <style name="preset" parent="@android:style/TextAppearance.Medium">
        <item name="android:gravity">left</item>
        <item name="android:padding">4dip</item>
    </style>
    <style name="input_label" parent="@android:style/TextAppearance.Small">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    <style name="input" parent="@android:style/TextAppearance.Medium">
        <item name="android:paddingBottom">8dp</item>
    </style>
    <style name="input_help" parent="@android:style/TextAppearance.Small">
        <item name="android:paddingBottom">8dp</item>
    </style>
</resources>
